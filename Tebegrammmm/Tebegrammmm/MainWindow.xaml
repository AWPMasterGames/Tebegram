<Window x:Class="Tebegrammmm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30"
        AllowsTransparency="True"
        WindowStyle="None"
        Opacity="1"
        MouseDown="Window_MouseDown">

    <Border CornerRadius="20" Background="#FF1E1E1E" BorderBrush="#FF3C3C3C" BorderThickness="2" Padding="20">
        <Grid>
            <Button Content="X"
                    Width="30" Height="30"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Margin="0,0,0,0"
                    Background="#FF3C3C3C"
                    Foreground="White"
                    BorderBrush="{x:Null}"
                    FontWeight="Bold"
                    FontSize="14"
                    Click="CloseButton_Click"/>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Вход в систему"
                           FontSize="28"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 30" />

                <TextBlock Text="Логин" Foreground="LightGray"/>
                <TextBox x:Name="TBUserLogin"
                         Height="35"
                         Margin="0 5 0 15"
                         FontSize="15"
                         Background="#FF2D2D30"
                         Foreground="White"
                         BorderBrush="#FF3C3C3C"
                         KeyDown="TextBox_KeyDown"/>

                <TextBlock Text="Пароль" Foreground="LightGray"/>
                <PasswordBox x:Name="TBUserPassord"
                             Height="35"
                             Margin="0 5 0 25"
                             FontSize="14"
                             Background="#FF2D2D30"
                             Foreground="White"
                             BorderBrush="#FF3C3C3C"
                             KeyDown="TBUserPassord_KeyDown"/>

                <Button Content="Войти"
                        Height="40"
                        Background="#FF007ACC"
                        Foreground="White"
                        FontWeight="Bold"
                        FontSize="16"
                        Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
