<Window x:Class="Tebegrammmm.EditContactNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить имя контакта" Height="200" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Введите новое имя контакта:" 
                   FontSize="14" Margin="0,0,0,10"/>
        
        <TextBox x:Name="TBName" Grid.Row="1" 
                 FontSize="14" Padding="5" Height="30"/>
        
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="BtnSave" Content="Сохранить" 
                    Width="80" Height="30" Margin="0,0,10,0"
                    Click="Button_Save_Click" IsDefault="True"/>
            <Button x:Name="BtnCancel" Content="Отмена" 
                    Width="80" Height="30"
                    Click="Button_Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>