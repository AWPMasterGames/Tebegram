<UserControl x:Class="Tebegrammmm.Controls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tebegrammmm.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="40">
    <Grid>
        <Border BorderThickness="3" Grid.Column="0" Width="40" BorderBrush="Black" Height="40" CornerRadius="60" Padding="0"
HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid>
                <Border Name="mask" Background="White" CornerRadius="60"/>
                <StackPanel>
                    <StackPanel.OpacityMask>
                        <VisualBrush Visual="{Binding ElementName=mask}"/>
                    </StackPanel.OpacityMask>
                    <Image Source="pack://application:,,,/Tebegrammmm;component/no_avatar.png" />

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
